---
import Nav from "./Nav.astro";
import ThemeSelector from "./ThemeSelector/ThemeSelector.astro";

const NAV_CONTENTS = [
  { label: "Blogs", link: "/blogs" },
  { label: "Tags", link: "/tags" },
];
const SOCIAL_LINKS = [
  {
    label: "GitHub",
    href: "https://github.com/bharateshwq",
    icon: "M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22",
  },
  {
    label: "LinkedIn",
    href: "https://www.linkedin.com/in/bharatesh-k",
    icon: "M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z M2 9h4v12H2z M4 2a2 2 0 1 1-2 2 2 2 0 0 1 2-2z",
  },
];
---

<header class="w-full mx-auto md:pt-12 pt-6 pb-8  md:px-0">
  <div class="flex flex-col md:gap-6 gap-3">
    {/* --- Top Row: Title & Socials --- */}
    <div
      class="flex flex-row justify-between md:items-end gap-4"
    >
      {/* Blog Title */}
      <a href="/" aria-label="Home" class="group">
        <h1
          class="text-4xl md:text-5xl font-black tracking-tighter text-base-content group-hover:text-primary transition-colors duration-300"
        >
          Bharatesh<span class="text-primary">.</span>blog
        </h1>
      </a>

      {/* Social Icons */}
      <div class="flex items-center gap-3">
        {
          SOCIAL_LINKS.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={social.label}
              class="btn btn-ghost btn-sm btn-square text-base-content/70 hover:text-primary hover:bg-base-200 transition-all"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d={social.icon} />
              </svg>
            </a>
          ))
        }
      </div>
    </div>

    {/* --- Bottom Row: Navigation & Divider --- */}
    <div class="border-b-2 border-base-content/10 pb-4 flex justify-between items-baseline">
      <Nav />
      <ThemeSelector />
    </div>
  </div>
</header>
